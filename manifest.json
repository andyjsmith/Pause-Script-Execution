{
	"manifest_version": 3,
	"name": "Pause Script Execution",
	"description": "Pause JavaScript execution to aid in debugging. Open DevTools and press the hotkey (default Ctrl+Shift+S) to pause script execution.",
	"version": "1.0.0",
	"commands": {
		"pause-script-execution": {
			"description": "Pause JavaScript Execution",
			"suggested_key": {
				"default": "Ctrl+Shift+S",
				"mac": "Command+Shift+S"
			}
		}
	},
	"background": {
		"service_worker": "worker.js"
	},
	"permissions": [
		"scripting",
		"activeTab"
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png",
		"128": "icons/icon128.png",
		"256": "icons/icon256.png"
	}
}